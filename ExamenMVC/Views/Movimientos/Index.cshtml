@model IEnumerable<ExamenMVC.Models.Movimiento>
@{
    ViewData["Title"] = "Movimientos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3><i class="bi bi-list-ul me-1"></i> Movimientos</h3>
    <a class="btn btn-dark" asp-action="Create">
        <i class="bi bi-plus-lg me-1"></i> Nuevo
    </a>
</div>

<table class="table table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Fecha</th>
            <th>Producto</th>
            <th>Tipo</th>
            <th>Cantidad</th>
            <th>Observación</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Fecha.ToLocalTime()</td>
                <td>@m.Producto?.Codigo - @m.Producto?.Nombre</td>
                <td>
                    <span class="badge @(m.Tipo == "Entrada" ? "bg-success" : "bg-danger")">
                        @m.Tipo
                    </span>
                </td>
                <td>@m.Cantidad</td>
                <td>@m.Observacion</td>
            </tr>
        }
    </tbody>
</table>
