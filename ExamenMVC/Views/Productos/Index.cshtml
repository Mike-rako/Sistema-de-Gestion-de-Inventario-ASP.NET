@model IEnumerable<ExamenMVC.Models.Producto>
@{
    ViewData["Title"] = "Productos";
    var q = (string?)ViewData["q"] ?? Context.Request.Query["q"].ToString();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3><i class="bi bi-box-seam me-1"></i> Productos</h3>
    <a class="btn btn-dark" asp-action="Create">
        <i class="bi bi-plus-lg me-1"></i> Nuevo
    </a>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-6">
        <input type="text"
               name="q"
               class="form-control"
               placeholder="Buscar por código, nombre o categoría"
               value="@q" />
    </div>
    <div class="col-md-6 text-end">
        <button class="btn btn-outline-dark me-2">Buscar</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Limpiar</a>
    </div>
</form>

<table class="table table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Categoría</th>
            <th class="text-end">Precio</th>
            <th class="text-end">Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Codigo</td>
                <td>@p.Nombre</td>
                <td>@p.Categoria</td>
                <td class="text-end">@p.Precio</td>
                <td class="text-end">@p.Stock</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@p.Id">Ver</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@p.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.Id">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
