@model ExamenMVC.Models.Producto
@{
    ViewData["Title"] = "Editar producto";
}

<h3 class="mb-3">
    <i class="bi bi-pencil-square me-1"></i> Editar producto
</h3>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" class="row g-3">
            <input type="hidden" asp-for="Id" />

            <div class="col-md-4">
                <label asp-for="Codigo" class="form-label"></label>
                <input asp-for="Codigo" class="form-control" />
            </div>

            <div class="col-md-8">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
            </div>

            <div class="col-md-4">
                <label asp-for="Categoria" class="form-label"></label>
                <input asp-for="Categoria" class="form-control" />
            </div>

            <div class="col-md-4">
                <label asp-for="Precio" class="form-label"></label>
                <input asp-for="Precio" class="form-control" />
            </div>

            <div class="col-md-4">
                <label asp-for="Stock" class="form-label"></label>
                <input asp-for="Stock" class="form-control" />
            </div>

            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Activo" />
                    <label class="form-check-label" asp-for="Activo"></label>
                </div>
            </div>

            <div class="col-12">
                <button class="btn btn-dark">
                    <i class="bi bi-save me-1"></i> Guardar cambios
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                    Volver
                </a>
            </div>

            @Html.AntiForgeryToken()
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
